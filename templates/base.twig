<!doctype html>
<!--[if lt IE 7]><html class="no-js ie ie6 lt-ie9 lt-ie8 lt-ie7" {{ site.language_attributes }}> <![endif]-->
<!--[if IE 7]><html class="no-js ie ie7 lt-ie9 lt-ie8" {{ site.language_attributes }}> <![endif]-->
<!--[if IE 8]><html class="no-js ie ie8 lt-ie9" {{ site.language_attributes }}> <![endif]-->
<!--[if gt IE 8]><!--><html class="no-js" {{ site.language_attributes }}> <!--<![endif]-->

<head>
    <meta charset="{{ site.charset }}" />
    <title>
        {% if wp_title %}
            {{ wp_title }} - {{ site.name }}
        {% else %}
            {{ site.name }}
        {% endif %}
    </title>
    <meta name="description" content="{{ site.description }}">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="pingback" href="{{ site.pingback_url }}" />
    {{function('wp_head')}}
    {#<link rel="stylesheet" href="{{ css }}">#}
    <script type="text/javascript" src="http://localhost:4321/assets/apps.js"></script>
</head>
	<body class="{{body_class}}" data-template="base.twig">
        <main id="app" role="main" class="app">

            {%
                include "src/project/components/mainHeader/mainHeader.twig"
                with { 'classElement': 'app_mainHeader' }
            %}

            {% block content %}
                {# Le contenu du site est charg√© dans ce block #}
            {% endblock %}

            {%
                include "src/project/components/mainFooter/mainFooter.twig"
                with { 'classElement': 'app_mainFooter' }
            %}

        </main>
	</body>
</html>
